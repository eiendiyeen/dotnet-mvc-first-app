@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Profile
        <small>User Information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-dashboard"></i>DashBoard</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-4">
            <!-- Profile Image -->
            <div class="card card-primary card-outline">
                <div class="card-body box-profile text-center">
                    <img class="profile-user-img img-fluid img-circle"
                         src="~/dist/img/minion.jpg"
                         alt="User profile picture">
                    <h3 class="profile-username text-center">Andienn</h3>
                    <p class="text-muted text-center">Software Developer</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Profile Details -->
            <div class="card">
                <div class="card-header p-2">
                    <h3 class="card-title">About Me</h3>
                </div>
                <div class="card-body">
                    <strong><i class="fas fa-envelope mr-1"></i> Email</strong>
                    <p class="text-muted">andienswesty@gmail.com</p>
                    <hr>

                    <strong><i class="fas fa-phone mr-1"></i> Phone</strong>
                    <p class="text-muted">+62 812-1855-1924</p>
                    <hr>

                    <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                    <p class="text-muted">Bali, Indonesia</p>
                    <hr>

                    <strong><i class="fas fa-pencil-alt mr-1"></i> Skills</strong>
                    <p class="text-muted">
                        <span class="badge bg-primary">C#</span>
                        <span class="badge bg-success">ASP.NET MVC</span>
                        <span class="badge bg-info">SQL</span>
                        <span class="badge bg-warning">Makan</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
